<div class="row">
	<div class="col-md-4 col-md-offset-1 text-center">
		<%= gravatar_for @user, size: 250 %>
	</div>
	<div class="col-md-6">
		<h1><%= @user.name %></h1>
		<h4 class="h4_show">Email: <%= @user.email %><br>
		W Kinotece od: <%= @user.created_at.strftime("%d.%m.%Y") %></h4>
		<%= link_to 'Edytuj', edit_user_path(@user), class: 'btn btn-info btn_show' %>
		<%= link_to 'Powrót', root_path, class: 'btn btn-default btn_show' %>
	</div>
	<div class="col-md-12">
		<h4 class="h4_show">Komentarze użytkownika:</h4><hr>
	</div>
</div>
