<div class="row">
	<div class="col-md-4 col-md-offset-1 text-center">
		<%= image_tag @director.photo_url, class: 'dir_show' %>
	</div>
	<div class="col-md-6">
		<h1><%= @director.name %></h1>
		<h4 class="h4_show">Data urodzenia: <%= @director.birth %></h4>
		<h3>Średnia ocena: ### do zrobienia ###</h3>
	</div>
	<div class="col-md-12">
		<p class="text-justify btn_show"><%= @director.bio %></p> 
		<% if admin? %>
			<%= link_to 'Usuń', director_path(@director), method: :delete, class: 'btn btn-danger btn_show' %>	
			<%= link_to 'Edytuj', edit_director_path(@director), class: 'btn btn-info btn_show' %>
		<% end %>
		<%= link_to 'Powrót', directors_path, class: 'btn btn-default btn_show' %>
	</div>
	<div class="col-md-12">
		<h4 class="h4_show">Komentarze użytkowników:</h4><hr>
		<p>### do zrobienia ###</p>
	</div>
</div>

