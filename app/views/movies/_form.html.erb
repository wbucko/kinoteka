<%= render 'shared/errors', obj: @movie %>
<div class="row">
	<div class="col-md-8 col-md-offset-2 well">
		<%= form_for @movie do |f| %>
			<%= f.label 'Tytuł' %>
			<%= f.text_field :title %>

			<%= f.label 'Rok produkcji' %>
			<%= f.text_field :year %>


      <%= f.label 'Gatunek' %><br>
      <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name do |cb| %>
         <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
      <br><br>
      
			<%= f.label 'Reżyser' %>
			<%= f.select :director_id, Director.all.map { |d| [d.name, d.id] } %>

			<%= f.label 'Photo URL' %>
			<%= f.text_field :photo_url %>

			<%= f.radio_button(:show, false, class: 'radio_button') %> 
			<%= f.label 'Film' %>
			<%= f.radio_button(:show, true, class: 'radio_button') %> 
			<%= f.label 'Serial' %><br>

			<%= f.label 'Recenzja' %>
			<%= f.text_area :review, rows: 10 %>

			<%= f.submit 'Zapisz', class: 'btn btn-success' %>
			<%= link_to 'Powrót', :back, class: 'btn btn-default uneditable-input' %>
		<% end %>
	</div>
</div>
